{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "mocha": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@eslint-community/eslint-comments/recommended",
    "plugin:eslint-plugin/recommended",
    "plugin:n/recommended",
    "plugin:mdx/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "eslint-plugin/report-message-format": ["error", "^[^a-z].*\\.$"]
  }
}
