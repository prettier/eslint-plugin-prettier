{
  "arrowParens": "avoid",
  "singleQuote": true,
  "plugins": [
    "@prettier/plugin-pug",
    "prettier-plugin-pkg",
    "prettier-plugin-svelte"
  ],
  "overrides": [
    {
      "files": [".*rc"],
      "excludeFiles": [".nvmrc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": [".changeset/**/*", "CHANGELOG.md"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
